algoritmo "SOCOMC"

var
 NOME: CARACTERE
 SOC:VETOR[1..10] DE CARACTERE
 C, TOT: INTEIRO
 
inicio
 TOT <- 0
 PARA C <- 1 ATE 10 FACA
      ESCREVA("DIGITE SEU NOME: ")
      LEIA (NOME)
      SE (COPIA(MAIUSC(NOME), 1, 1) = "C") ENTAO
         TOT <- TOT + 1
         SOC[TOT] <- NOME
      FIMSE
 FIMPARA
 
 LIMPATELA
 ESCREVAL("LITAGEM FINAL")
 PARA C <- 1 ATE TOT FACA
      ESCREVAL (SOC[C])
 FIMPARA
 
fimalgoritmo
